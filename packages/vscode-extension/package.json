{
  "name": "vscode-extension",
  "displayName": "Line Heat",
  "description": "LineHeat MVP: log edited line locations",
  "version": "0.0.1",
  "publisher": "lineheat",
  "repository": {
    "type": "git",
    "url": "https://github.com/filipsuk/line-heat.git"
  },
  "engines": {
    "vscode": "^1.105.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "LineHeat",
      "properties": {
        "lineheat.serverUrl": {
          "type": "string",
          "default": "",
          "description": "LineHeat server URL."
        },
        "lineheat.token": {
          "type": "string",
          "default": "",
          "description": "Shared team token for LineHeat."
        },
        "lineheat.displayName": {
          "type": "string",
          "default": "${env:USER}",
          "description": "Display name shared with teammates."
        },
        "lineheat.emoji": {
          "type": "string",
          "default": "ðŸ™‚",
          "description": "Emoji shown next to your name."
        },
        "lineheat.heatDecayHours": {
          "type": "number",
          "default": 24,
          "minimum": 1,
          "description": "Hours before heat fully decays."
        },
        "lineheat.logLevel": {
          "type": "string",
          "default": "info",
          "enum": [
            "error",
            "warn",
            "info",
            "debug"
          ],
          "description": "LineHeat log verbosity."
        }
      }
    }
  },
  "scripts": {
    "build:protocol": "npm run build -w @line-heat/protocol",
    "bundle": "node ./esbuild.mjs",
    "vscode:prepublish": "npm run compile",
    "compile": "npm run build:protocol && tsc -p ./ && npm run bundle",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "dependencies": {},
  "devDependencies": {
    "@line-heat/protocol": "0.0.0",
    "@types/vscode": "^1.105.1",
    "@types/ws": "^8.18.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "esbuild": "^0.25.10",
    "socket.io-client": "^4.8.1",
    "socket.io": "^4.8.1",
    "typescript-eslint": "^8.52.0",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
