{
  "name": "lineheat-vscode",
  "displayName": "Line Heat",
  "description": "Prevent code conflicts even before you commit",
  "version": "0.1.2",
  "publisher": "filipsuk",
  "icon": "icon.png",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/filipsuk/line-heat.git"
  },
  "engines": {
    "vscode": "^1.105.1"
  },
  "categories": [
    "Visualization"
  ],
  "files": [
    "out/extension.js",
    "icon.png",
    "LICENSE.md",
    "README.md",
    "CHANGELOG.md"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "LineHeat",
      "properties": {
        "lineheat.serverUrl": {
          "type": "string",
          "default": "https://lineheat.filipsuk.cz:8787",
          "description": "LineHeat server URL."
        },
        "lineheat.token": {
          "type": "string",
          "default": "",
          "description": "Shared team token for LineHeat."
        },
        "lineheat.displayName": {
          "type": "string",
          "default": "",
          "description": "Display name shared with teammates."
        },
        "lineheat.emoji": {
          "type": "string",
          "default": "ðŸ™‚",
          "description": "Emoji shown next to your name."
        },
        "lineheat.heatDecayHours": {
          "type": "number",
          "default": 72,
          "minimum": 1,
          "description": "Hours before heat fully decays."
        },
        "lineheat.logLevel": {
          "type": "string",
          "default": "info",
          "enum": [
            "error",
            "warn",
            "info",
            "debug"
          ],
          "description": "LineHeat log verbosity."
        },
        "lineheat.presenceNotificationCooldownMinutes": {
          "type": "number",
          "default": 15,
          "minimum": 0,
          "description": "Minimum time (in minutes) between presence conflict notifications for the same file. Set to 0 to disable notifications."
        },
        "lineheat.enabledRepositories": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "Glob patterns for repositories where LineHeat is enabled. Empty = enabled everywhere. Example: [\"/home/user/work/*\", \"**/company-*\"]"
        }
      }
    },
    "commands": [
      {
        "command": "lineheat.enableForRepository",
        "title": "LineHeat: Enable for this repository"
      },
      {
        "command": "lineheat.openWalkthrough",
        "title": "LineHeat: Open Setup Guide"
      }
    ],
    "walkthroughs": [
      {
        "id": "lineheat.getStarted",
        "title": "Get Started with LineHeat",
        "description": "See who's working on the same code in real-time",
        "steps": [
          {
            "id": "configureToken",
            "title": "Configure your token",
            "description": "Get a shared token from your team lead and paste it in the settings.\n\n[Open Token Settings](command:workbench.action.openSettings?%5B%22lineheat.token%22%5D)",
            "media": {
              "markdown": "Your team shares one token to see each other's presence. Once configured, LineHeat will connect automatically."
            },
            "completionEvents": [
              "onSettingChanged:lineheat.token"
            ]
          },
          {
            "id": "personalize",
            "title": "Personalize your presence",
            "description": "Set your display name and emoji so teammates recognize you.\n\n[Open Display Name Settings](command:workbench.action.openSettings?%5B%22lineheat.displayName%22%5D)",
            "media": {
              "markdown": "Pick a fun emoji to stand out!"
            },
            "completionEvents": [
              "onSettingChanged:lineheat.displayName",
              "onSettingChanged:lineheat.emoji"
            ]
          }
        ]
      }
    ]
  },
  "scripts": {
    "build:protocol": "npm run build -w @line-heat/protocol",
    "bundle": "node ./esbuild.mjs",
    "bundle:production": "node ./esbuild.mjs --production",
    "check-types": "tsc --noEmit -p ./",
    "compile": "npm run build:protocol && npm run check-types && npm run bundle",
    "compile-tests": "npm run build:protocol && tsc -p ./",
    "package": "npm run build:protocol && npm run check-types && npm run bundle:production",
    "vscode:prepublish": "npm run package",
    "vsix": "npm exec --yes @vscode/vsce package -- --no-dependencies",
    "watch": "node ./esbuild.mjs --watch",
    "watch:tsc": "tsc --noEmit --watch -p ./",
    "pretest": "npm run compile-tests && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@line-heat/protocol": "0.0.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/picomatch": "^4.0.2",
    "@types/vscode": "^1.105.1",
    "@types/ws": "^8.18.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.10",
    "eslint": "^9.39.2",
    "picomatch": "^4.0.3",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0"
  }
}
